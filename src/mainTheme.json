{
  "name": "light",
  "breakpoints": ["480px", "780px", "1024px"],
  "space": [0, 4, 8, 16, 32, 64, 128, 256, 512],
  "fonts": {
    "body": "Poppins, sans-serif",
    "title": "QuiteMagicalRegular, Poppins, sans-serif",
    "heading": "Poppins, sans-serif",
    "monospace": "Menlo, monospace"
  },
  "fontSizes": [12, 14, 16, 20, 24, 32, 48, 64, 96],
  "fontWeights": {
    "body": 400,
    "heading": 900,
    "bold": 700
  },
  "lineHeights": {
    "body": 1.625,
    "heading": 1.25
  },
  "colors": {
    "text": "#000",
    "background": "#fff",
    "primary": "#609",
    "secondary": "#306",
    "muted": "#f6f6f6",
    "danger": "#C20114",
    "dangerText": "#C20114",
    "special": "#3075AB"
  },
  "forms": {
    "label": {
      "fontSize": 3
    }
  },
  "styles": {
    "root": {
      "fontFamily": "body",
      "lineHeight": "body",
      "fontWeight": "body"
    },
    "h1": {
      "color": "text",
      "fontFamily": "title",
      "lineHeight": "heading",
      "fontWeight": "heading",
      "fontSize": 5
    },
    "h2": {
      "color": "text",
      "fontFamily": "heading",
      "lineHeight": "heading",
      "fontWeight": "heading",
      "fontSize": 4
    },
    "h3": {
      "color": "text",
      "fontFamily": "heading",
      "lineHeight": "heading",
      "fontWeight": "heading",
      "fontSize": 3
    },
    "h4": {
      "color": "text",
      "fontFamily": "heading",
      "lineHeight": "heading",
      "fontWeight": "heading",
      "fontSize": 2
    },
    "h5": {
      "color": "text",
      "fontFamily": "heading",
      "lineHeight": "heading",
      "fontWeight": "heading",
      "fontSize": 1
    },
    "h6": {
      "color": "text",
      "fontFamily": "heading",
      "lineHeight": "heading",
      "fontWeight": "heading",
      "fontSize": 0
    },
    "p": {
      "color": "text",
      "fontFamily": "body",
      "fontWeight": "body",
      "lineHeight": "body"
    },
    "a": {
      "color": "primary"
    },
    "pre": {
      "fontFamily": "monospace",
      "overflowX": "auto",
      "code": {
        "color": "inherit"
      }
    },
    "code": {
      "fontFamily": "monospace",
      "fontSize": "inherit"
    },
    "table": {
      "width": "100%",
      "borderCollapse": "separate",
      "borderSpacing": 0
    },
    "th": {
      "textAlign": "left",
      "borderBottomStyle": "solid"
    },
    "td": {
      "textAlign": "left",
      "borderBottomStyle": "solid"
    },
    "img": {
      "maxWidth": "100%"
    }
  },
  "buttons": {
    "ghost": {
      "bg": "transparent",
      "color": "text",
      "cursor": "pointer",
      "border": "1px #000 solid",
      ":disabled": {
        "bg": "muted",
        "cursor": "default",
        "border": "1px #f6f6f6 solid"
      }
    },
    "clear": {
      "bg": "transparent",
      "color": "text",
      "cursor": "pointer"
    },
    "secondary": {
      "bg": "secondary",
      "color": "white",
      "cursor": "pointer"
    },
    "danger": {
      "bg": "danger",
      "color": "white",
      "cursor": "pointer"
    },
    "special": {
      "bg": "special",
      "color": "white",
      "cursor": "pointer"
    }
  },
  "variants": {
    "card": {
      "padding": 2,
      "border": "1px #f6f6f6 solid",
      "borderRadius": "12px",
      "boxShadow": "0 0px 0.7px rgba(0, 0, 0, 0.042), 0 0px 1.7px rgba(0, 0, 0, 0.061), 0 0px 3.1px rgba(0, 0, 0, 0.075), 0 0px 5.6px rgba(0, 0, 0, 0.089), 0 0px 10.4px rgba(0, 0, 0, 0.108), 0 0px 25px rgba(0, 0, 0, 0.15)"
    }
  }
}
